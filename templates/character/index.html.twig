{% extends 'base.html.twig' %}

{% block title %}Character index{% endblock %}

{% block body %}
    <h1>Character index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Birthday</th>
                <th>Strength</th>
                <th>Speed</th>
                <th>Magic</th>
                <th>Defense</th>
                <th>Level</th>
                <th>Xp</th>
                <th>Life</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.id }}</td>
                <td>{{ character.name }}</td>
                <td>{{ character.birthday ? character.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ character.strength }}</td>
                <td>{{ character.speed }}</td>
                <td>{{ character.magic }}</td>
                <td>{{ character.defense }}</td>
                <td>{{ character.level }}</td>
                <td>{{ character.xp }}</td>
                <td>{{ character.life }}</td>
                <td>
                    <a href="{{ path('app_character_show', {'id': character.id}) }}">show</a>
                    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_character_new') }}">Create new</a>
{% endblock %}

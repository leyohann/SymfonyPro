{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ character.birthday ? character.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Strength</th>
                <td>{{ character.strength }}</td>
            </tr>
            <tr>
                <th>Speed</th>
                <td>{{ character.speed }}</td>
            </tr>
            <tr>
                <th>Magic</th>
                <td>{{ character.magic }}</td>
            </tr>
            <tr>
                <th>Defense</th>
                <td>{{ character.defense }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ character.level }}</td>
            </tr>
            <tr>
                <th>Xp</th>
                <td>{{ character.xp }}</td>
            </tr>
            <tr>
                <th>Life</th>
                <td>{{ character.life }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}

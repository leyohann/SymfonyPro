    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ type.name }}</td>
            </tr>
            <tr>
                <th>Base_strength</th>
                <td>{{ type.baseStrength }}</td>
            </tr>
            <tr>
                <th>Base_speed</th>
